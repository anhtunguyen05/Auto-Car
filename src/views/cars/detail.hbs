<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Car Details</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/cars/edit/{{car._id}}" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <button onclick="deleteCar('{{car._id}}')" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </div>
        <a href="/cars" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <h5><i class="bi bi-car-front"></i> Car Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="height: 300px;">
                            <i class="bi bi-car-front" style="font-size: 5rem;"></i>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong>Brand:</strong>
                        <p>{{car.brand}}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Model:</strong>
                        <p>{{car.model}}</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong>License Plate:</strong>
                        <p><span class="badge bg-dark">{{car.licensePlate}}</span></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Status:</strong>
                        <p><span class="badge bg-{{statusColor car.status}}">{{car.status}}</span></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <strong>Price per Day:</strong>
                        <p class="text-primary fs-4">${{car.pricePerDay}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <i class="bi bi-calendar-check"></i> Booking History
            </div>
            <div class="card-body">
                {{#if bookings}}
                    <div class="list-group">
                        {{#each bookings}}
                            <a href="/bookings/{{this._id}}" class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>{{this.customer.name}}</strong><br>
                                        <small>{{formatDate this.startDate}} - {{formatDate this.endDate}}</small>
                                    </div>
                                    <span class="badge bg-{{statusColor this.status}}">{{this.status}}</span>
                                </div>
                            </a>
                        {{/each}}
                    </div>
                {{else}}
                    <p class="text-muted">No booking history available</p>
                {{/if}}
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <i class="bi bi-gear"></i> Quick Actions
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/bookings/add?carId={{car._id}}" class="btn btn-success">
                        <i class="bi bi-calendar-plus"></i> Create Booking
                    </a>
                    <a href="/cars/edit/{{car._id}}" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Details
                    </a>
                    <button onclick="deleteCar('{{car._id}}')" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Car
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
