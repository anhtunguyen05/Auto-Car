<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Cars</h1>
        <a href="/user/add-car" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Car
        </a>
    </div>
    
    <div class="row">
        {{#each cars}}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">{{this.brand}} {{this.model}}</h5>
                    <span class="badge bg-{{#if (eq this.status 'AVAILABLE')}}success{{else}}warning{{/if}}">
                        {{this.status}}
                    </span>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>License:</strong> {{this.licensePlate}}</p>
                    <p class="mb-2"><strong>Year:</strong> {{this.year}}</p>
                    <p class="mb-2"><strong>Type:</strong> {{this.type}}</p>
                    <p class="mb-2"><strong>Price:</strong> <span class="text-primary">${{this.pricePerDay}}/day</span></p>
                    {{#if this.description}}
                    <p class="mb-2"><small>{{this.description}}</small></p>
                    {{/if}}
                </div>
                <div class="card-footer">
                    <div class="btn-group w-100">
                        <a href="/user/edit-car/{{this._id}}" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="/user/car-bookings/{{this._id}}" class="btn btn-outline-info">
                            <i class="bi bi-calendar"></i> Bookings
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-12">
            <div class="alert alert-info text-center">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mb-0 mt-2">You haven't listed any cars yet.</p>
                <a href="/user/add-car" class="btn btn-success mt-3">
                    <i class="bi bi-plus-circle"></i> List Your First Car
                </a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
